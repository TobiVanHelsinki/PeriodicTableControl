<UserControl x:Class="TobiVanHelsiki.PeriodicTableControl.PeriodicTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TobiVanHelsiki.PeriodicTableControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="MyPeriodicTable" ShowGridLines="True"/>
        <CheckBox Grid.Row="1" Content="ShowLanthanidesActinides" IsChecked="{Binding ShowLanthanidesActinides}"/>
        <CheckBox Grid.Row="3" Content="Wide" IsChecked="{Binding Wide}"/>
        <CheckBox Grid.Row="4" Content="ShowGridLines" IsChecked="{Binding ShowGridLines}"/>
    </Grid>
</UserControl>
